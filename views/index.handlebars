<h1>Eat Da Burger!</h1>

<h2>Add a burger...</h2>
<form class="create-form">
    <div class="form-group">
        <label for="burg">Burger Name:</label>
        <input type="text" id="burg" name="name" placeholder="Enter your burger's name">
    </div>
    <button type="submit">Add Burger</button>
</form>

<h2>Burgers to be devoured...</h2>

<ul>
    {{#each burger}}
    <img src="../public/assets/images/burger.png" height="50px" width="50px">
    {{name}}
    <button class="devour-burger" data-id="{{id}}" data-devoured="{{devoured}}">
        Devoured!
    </button>
</ul>